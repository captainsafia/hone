---
interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/docs/installation', label: 'Docs' },
  { href: '/examples', label: 'Examples' },
];
---

<header class="sticky top-0 z-50 backdrop-blur-sm bg-light-bg/80 border-b border-light-border">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center h-16 gap-8">
      <a href="/" class="font-semibold text-xl hover:text-electric-blue transition-colors">
        Hone
      </a>
      
      <nav class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'text-sm font-medium transition-colors',
              currentPath.startsWith(link.href) && link.href !== '/'
                ? 'text-electric-blue'
                : currentPath === link.href
                  ? 'text-electric-blue'
                  : 'text-light-text-muted hover:text-light-text'
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>
      
      <div class="flex items-center gap-4 ml-auto">
        <a
          href="https://github.com/captainsafia/hone/stargazers"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden sm:inline-flex items-center gap-1.5 text-sm font-medium text-light-text-muted hover:text-amber transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          Star
        </a>
        <a
          href="https://github.com/captainsafia/hone"
          target="_blank"
          rel="noopener noreferrer"
          class="text-light-text-muted hover:text-light-text transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z"/>
          </svg>
        </a>
        
        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 rounded-lg text-light-text-muted hover:bg-light-border transition-colors"
          aria-label="Open menu"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-light-border">
    <div class="px-4 py-4 space-y-2">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block px-4 py-2 rounded-lg text-sm font-medium transition-colors',
            currentPath.startsWith(link.href) && link.href !== '/'
              ? 'bg-electric-blue/10 text-electric-blue'
              : currentPath === link.href
                ? 'bg-electric-blue/10 text-electric-blue'
                : 'text-light-text-muted hover:bg-light-border'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script is:inline>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
