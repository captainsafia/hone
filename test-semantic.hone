# Test file for semantic validation

# This should cause an error - expect outside @test
expect stdout {
    contains "hello"
}

# This should cause an error - run outside @test
run echo "world"

@test "valid test" {
    run echo "hello"
    expect stdout {
        contains "hello"
    }
}

@test "another valid test" {
    # This should cause an error - env inside @test
    env MY_VAR=value
    
    run echo "test"
    expect exitcode 0
}
