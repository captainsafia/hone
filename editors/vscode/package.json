{
  "name": "hone",
  "displayName": "Hone",
  "description": "Language support for Hone test files",
  "version": "0.3.0",
  "publisher": "captainsafia",
  "repository": {
    "type": "git",
    "url": "https://github.com/captainsafia/hone"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "hone",
    "syntax-highlighting",
    "testing"
  ],
  "activationEvents": [
    "onLanguage:hone"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hone",
        "aliases": ["Hone", "hone"],
        "extensions": [".hone"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hone",
        "scopeName": "source.hone",
        "path": "./syntaxes/hone.tmlanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Hone",
      "properties": {
        "hone.lsp.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the Hone language server"
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production"
  }
}
