{
  "name": "hone",
  "displayName": "Hone",
  "description": "Hone CLI integration testing support for VS Code",
  "version": "0.2.0",
  "publisher": "captainsafia",
  "repository": {
    "type": "git",
    "url": "https://github.com/captainsafia/hone"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Testing"
  ],
  "keywords": [
    "hone",
    "cli",
    "testing",
    "integration-testing",
    "dsl"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:hone",
    "workspaceContains:**/*.hone"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hone",
        "aliases": ["Hone", "hone"],
        "extensions": [".hone"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hone",
        "scopeName": "source.hone",
        "path": "./syntaxes/hone.tmlanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
